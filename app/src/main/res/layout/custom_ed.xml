<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:weightSum="4"
          android:layout_centerInParent="true"
          android:layout_height="40dp">
            <TextView
                android:id="@+id/custom_codetvone"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:background="@drawable/custom_edcodebg_no"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/custom_codetvtwo"
                android:background="@drawable/custom_edcodebg_no"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/custom_codetvthree"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="@drawable/custom_edcodebg_no"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/custom_codetvfour"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:background="@drawable/custom_edcodebg_no"
                android:layout_height="match_parent" />
      </LinearLayout>
      <EditText
          android:id="@+id/custom_ed"
          android:layout_width="match_parent"
          android:background="@color/six"
          android:inputType="number"
          android:maxLength="4"
          android:layout_centerInParent="true"
          android:layout_height="40dp" />
</RelativeLayout>
