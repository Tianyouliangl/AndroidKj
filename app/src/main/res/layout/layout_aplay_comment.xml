<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="60dp"
        android:id="@+id/cd"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:src="@mipmap/music"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/cd"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/iv_pause_music"
        android:layout_marginBottom="16dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_pop_title"
            android:text="title"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
<LinearLayout
    android:layout_weight="1"
    android:paddingLeft="12dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <TextView
        android:id="@+id/tv_pop_author"
        android:text="title"
        android:textColor="@color/black"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_weight="1"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_pop_time"
        android:text="title"
        android:textColor="@color/black"
        android:paddingLeft="12dp"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_weight="1"
        android:maxLines="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>


    </LinearLayout>

    <ImageView
        android:src="@mipmap/start_l"
        android:padding="8dp"
        android:id="@+id/iv_pause_music"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />


</RelativeLayout>



</FrameLayout>
