<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_music_title"
        android:text="歌曲名字"
        android:layout_toLeftOf="@id/iv_music_isPlaying"
        android:transitionName="musicTitle"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="28dp" />

    <ImageView
        android:id="@+id/iv_music"
        android:src="@mipmap/music"
        android:padding="6dp"
        android:layout_below="@id/tv_music_title"
        android:transitionName="musicFM"
        android:layout_width="28dp"
        android:layout_height="28dp" />

    <TextView
        android:id="@+id/tv_music_msg"
        android:layout_toLeftOf="@id/iv_music_isPlaying"
        android:text="腐败就不发就不发甲方巴基"
        android:textSize="16sp"
        android:layout_below="@id/tv_music_title"
        android:layout_toRightOf="@id/iv_music"
        android:transitionName="musicName"
        android:paddingLeft="6dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="28dp" />
    <ImageView
        android:id="@+id/iv_music_isPlaying"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_music_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@mipmap/s_menu"
        android:padding="18dp"
        android:id="@+id/iv_music_right_menu"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />



</RelativeLayout>
